@model CW3Blog.Models.BlogPostModel
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Create New Blog Post";
}

@{
    string CurrentDateTime = DateTime.Now.ToString("s");
}

<h2>Create New Blog Post</h2>

<h4>New Blog Post</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" placeholder="The post title goes here..." />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" input asp-for="AuthorName" class="form-control" value=@UserManager.GetUserName(User) />
                <span asp-validation-for="AuthorName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" input asp-for="CreatedTime" class="form-control" value="@CurrentDateTime" />
                <span asp-validation-for="CreatedTime" class="text-danger"></span>
            </div>
</div>
    </div>
    <div class="form-group">
        <input asp-for="Content" class="form-control" style="height: 200px;" placeholder="What would you like to write?" />
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-default" />
    </div>
    </form>
</div>
    </div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
