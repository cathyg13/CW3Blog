<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CW3 Blog</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <style>
    /* Set background color and 100% height */
        .sidenav {
            background-color: #ffa833;
            height: 100%;
            width: 175px;
            padding: 15px;
            position: fixed;
            left: 0px;
        }

    /* Set background color, text and some padding */
    footer {
      background-color: #0094ff;
      text-align: center;
      color: black;
      bottom: 0px;
      height: 50px;
    }

    /* On small screens, set height to 'auto' for sidenav and grid */
    @@media screen and (max-width: 767px) {
      .sidenav {
        height: auto;
        padding: 10px;
      }

    }
    </style>
</head>

<body>
    <div class="col-sm-3 sidenav">
        <h4>CW3 Blog</h4>
        @await Html.PartialAsync("_LoginPartial")
        <br/><br /><br /><br /><br />
        <ul class="nav nav-pills nav-stacked">
            <li><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
            <li><a asp-area="" asp-controller="BlogPosts" asp-action="Index">Blog Posts</a></li>
            <li>Admin</li>
            <li><a asp-area="" asp-controller="Users" asp-action="Index">User Information</a></li>
            <li><a asp-area="" asp-controller="Analytics" asp-action="Index">Analytics</a></li>
        </ul>
        <br>
    </div>


    <div class="container body-content" style="padding:20px;">
            <div>
                @RenderBody()
            </div>   
    </div>
           
<footer>
    <p>
    CW3Blog &copy; <script>document.write(new Date().getFullYear())</script>
    </p>
</footer>
        @RenderSection("Scripts", required: false)
</body>
</html>
